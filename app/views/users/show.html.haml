%h1
	= @user.username

- if logged_in? && (@user.id == current_user.id)
	%a{:href => edit_user_url(@user)}
		Edit Profile information

%h3
	Full Name
= @user.full_name

%h3
	Location
= @user.location || "NOT GIVEN"

%h3
	Email
= @user.email

%h3
	Bio
= @user.bio || "NOT GIVEN"

%h3
	Date of Birth
= @user.date_of_birth || "NOT GIVEN"


%h2= "Comments by #{@user.username}"
= render "comments/comments_list", {:comments => @user.comments, :include_source => true}